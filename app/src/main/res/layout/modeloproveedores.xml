<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/gradientitem">

        <ImageView
            android:id="@+id/imageicon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/iconoperfil"
            android:scaleType="centerCrop"
            android:contentDescription="Icono de perfil o RFC"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RFC:"
                android:textColor="#757575"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tv_rfc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXX-XXXXXX-XX"
                android:textColor="#212121"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Iconos de acciÃ³n (editar y eliminar) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/edit"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/editar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Editar RFC"
                android:padding="8dp"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/basurita3"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Eliminar RFC"
                android:padding="8dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>