<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoprincipal"
    tools:context=".Principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/bupacasmenu" />

        <ImageView
            android:id="@+id/perfil"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/iconoperfil" />
    </LinearLayout>

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="420dp"
        android:layout_marginTop="160dp"
        android:layout_gravity="top|center_horizontal"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Fila 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/proovedores"
                    android:layout_width="180dp"
                    android:layout_height="210dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:text="Proveedores"
                        android:textColor="@color/black"
                        android:textSize="27sp"
                        android:textStyle="bold"
                        android:padding="20dp" />

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/proovedores" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/envios"
                    android:layout_width="180dp"
                    android:layout_height="210dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Envios"
                        android:textColor="@color/black"
                        android:textSize="27sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="-20dp"
                        android:padding="20dp" />

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="left"
                        android:src="@drawable/envios" />
                </LinearLayout>
            </LinearLayout>

            <!-- Fila 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/pagos"
                    android:layout_width="180dp"
                    android:layout_height="210dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Pagos"
                        android:textSize="27sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="20dp" />

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/pagos" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/inventarios"
                    android:layout_width="180dp"
                    android:layout_height="210dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:text="Inventarios"
                        android:textColor="@color/black"
                        android:textSize="27sp"
                        android:textStyle="bold"
                        android:padding="20dp" />

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="left"
                        android:src="@drawable/inventarios" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/clientes"
                    android:layout_width="180dp"
                    android:layout_height="210dp"
                    android:layout_marginStart="90dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Cliente"
                        android:gravity="center_horizontal"
                        android:textSize="27sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="20dp" />

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/clientes" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_marginTop="600dp"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="610dp"
        android:layout_gravity="top|center_horizontal">

        <ImageView
            android:id="@+id/casita"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/casita" />

        <ImageView
            android:id="@+id/soporte"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mensajitos" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/signoutlayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¿Estas seguro deseas cerrar sesion?"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:background="@drawable/colorb"
                    android:text="Cancelar" />

                <Button
                    android:id="@+id/logoutb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:background="@drawable/colorb"
                    android:layout_marginStart="24dp"
                    android:text="Cerrar Sesion" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</FrameLayout>

