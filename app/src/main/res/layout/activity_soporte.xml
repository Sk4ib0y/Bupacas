<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context=".Soporte">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bordestextv"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Soporte TÃ©cnico"
            android:textSize="26dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:id="@+id/atras"
            android:src="@drawable/tachecito"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <SearchView
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bordeseditt"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/perfil"
            android:src="@drawable/iconoperfil"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listita"
        android:divider="#000000"
        android:dividerHeight="2dp"
        />
</LinearLayout>