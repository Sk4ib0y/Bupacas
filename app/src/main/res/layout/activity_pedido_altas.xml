<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/fondogrande"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Altas.ProovedorAltas">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flecha"
            android:id="@+id/atras"/>
        <ImageView
            android:layout_width="170dp"
            android:layout_marginStart="40dp"
            android:layout_height="100dp"
            android:src="@drawable/papaenvios"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="#80FFFFFF">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Código Postal"/>
            <EditText
                android:layout_width="200dp"
                android:textColor="@color/black"
                android:layout_height="40dp"
                android:id="@+id/cp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Destino"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:id="@+id/destino"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Fecha"/>
            <EditText
                android:layout_marginStart="20dp"
                android:id="@+id/etFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selecciona la fecha"
                android:focusable="false"
                android:textColor="@color/black"
                android:clickable="true"
                android:inputType="none"
                android:background="@drawable/bordesspinner"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/bordesspinner"
            android:padding="12dp"/>

        <Spinner
            android:id="@+id/spinnerProveedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/bordesspinner"
            android:padding="12dp"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir al registro"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:id="@+id/send"
        android:background="@drawable/colorb"
        app:backgroundTint="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:background="#CFD8DC"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/casita"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="32dp"
            android:src="@drawable/casita"
            android:contentDescription="Inicio"/>

        <ImageView
            android:id="@+id/soporte"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="32dp"
            android:src="@drawable/mensajitos"
            android:contentDescription="Soporte"/>
    </LinearLayout>
</LinearLayout>