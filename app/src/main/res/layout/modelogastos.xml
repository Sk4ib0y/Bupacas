<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/gradientgastos">

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/billete"
        android:scaleType="centerInside"
        android:contentDescription="Icono gasto"
        android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de gasto"
                android:textColor="#607D8B"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tv_tipo_gasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combustible / Mantenimiento"
                android:textColor="#263238"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_cantidad_gasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cantidad: $1,250.00"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/edit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/editar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar gasto"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/basurita3"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar gasto"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>