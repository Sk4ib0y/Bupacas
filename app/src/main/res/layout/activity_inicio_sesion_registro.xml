<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginfondo"
    android:focusable="false"
    android:clickable="false"
    tools:context=".Misceláneo.InicioSesionRegistro">

    <FrameLayout
        android:layout_width="290dp"
        android:visibility="visible"
        android:layout_height="540dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/logindatos"
        android:background="@drawable/bordesredondos">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a Bupacas"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listita"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="8dp"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/registrob"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="350dp"
            android:text="Registrarte"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:background="@drawable/colorb2"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="350dp"
            android:text="Iniciar\nSesión"
            android:textSize="13sp"
            android:clickable="false"
            android:background="@drawable/colorb"
            app:backgroundTint="@null" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="220dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/contraseñadatos"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textColor="#b2b2b2"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/contraseña_login"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:textColor="@color/black"
                    android:inputType="textPassword" />
            </LinearLayout>
            </FrameLayout>




            <Button
                android:id="@+id/iniciosesionsend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Iniciar Sesión"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@drawable/colorb"
                app:backgroundTint="@null" />
        </LinearLayout>
    </FrameLayout>


    
    <FrameLayout
        android:layout_width="290dp"
        android:visibility="gone"
        android:id="@+id/registrodatos"
        android:layout_height="420dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/bordesredondos">

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:text="Iniciar\nSesión"
            android:textSize="13sp"
            android:background="@drawable/colorb2"
            android:id="@+id/iniciosesionb"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="30dp"
            android:text="Registrarte"
            android:clickable="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:background="@drawable/colorb"
            app:backgroundTint="@null" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido a Bupacas"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario"
                    android:textColor="#b2b2b2"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/usuario"
                    android:layout_width="120dp"
                    android:textColor="@color/black"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#b2b2b2"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/gmail_registro"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textColor="#b2b2b2"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/contraseña_registro"
                    android:layout_width="120dp"
                    android:textColor="@color/black"
                    android:layout_height="50dp"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmar\nContraseña"
                    android:textColor="#b2b2b2"
                    android:textSize="16sp" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/confirmarcontraseña_registro"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:inputType="textPassword" />
            </LinearLayout>

            <Button
                android:id="@+id/registrosend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Registro"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@drawable/colorb"
                app:backgroundTint="@null" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
