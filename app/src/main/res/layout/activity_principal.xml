<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoprincipal"
    tools:context=".Principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
    <ImageView
    android:layout_width="80dp"
    android:layout_height="100dp"
    android:src="@drawable/menu"/>
        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_width="100dp"
            android:src="@drawable/bupacasmenu"
            android:layout_height="100dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/perfil"
        android:src="@drawable/iconoperfil"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="360dp"
        android:layout_height="420dp"
        android:layout_marginTop="60dp">

        <TableRow

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_height="210dp"
                android:layout_width="180dp"
                android:orientation="vertical"
                android:id="@+id/proovedores"
                android:gravity="center">
            <TextView
                android:text="Proveedores"
                android:layout_height="80dp"
                android:textColor="@color/black"
                android:textSize="27sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:layout_width="200dp"
                />
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/proovedores"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="210dp"
                android:layout_width="180dp"
                android:orientation="vertical"
                android:id="@+id/envios"
                android:gravity="center">
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Envios"
                android:textColor="@color/black"
                android:textSize="27sp"
                android:textStyle="bold"
                android:layout_marginLeft="-20dp"
                android:padding="20dp" />
                <ImageView
                    android:layout_gravity="left"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/envios"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_height="210dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/pagos"
                android:gravity="center">
            <TextView
                android:text="Pagos"
                android:textSize="27sp"
                android:textColor="@color/black"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="20dp" />
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:src="@drawable/pagos"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="210dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/inventarios"
                android:gravity="center">
            <TextView
                android:layout_marginLeft="-10dp"
                android:textColor="@color/black"
                android:text="Inventarios"
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:textSize="27sp"
                android:textStyle="bold"
                android:padding="20dp" />
                <ImageView
                    android:layout_gravity="left"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/inventarios"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>


    <View
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/casita"
            android:id="@+id/casita"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/folder"
            android:id="@+id/carpeta"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/basurita2"
            android:id="@+id/basura"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/mensajitos"
            android:id="@+id/soporte"/>
    </LinearLayout>
</LinearLayout>