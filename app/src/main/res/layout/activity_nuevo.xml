<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context=".Nuevo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/bordestextv"
        android:text="Nuevo Usuario"
        android:textSize="40dp"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="31dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bordeseditt"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:id="@+id/nombre"/>

    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dato 1"
        android:textSize="31dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"/>

    <EditText
        android:textColor="@color/black"
        android:layout_width="350dp"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bordeseditt"
        android:layout_gravity="center"
        android:id="@+id/dato1"/>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dato 2"
        android:textSize="31dp"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="37dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:background="@drawable/bordeseditt"
        android:layout_gravity="center"
        android:id="@+id/dato2"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dato 3"
        android:textSize="31dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="37dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:background="@drawable/bordeseditt"
        android:layout_gravity="center"
        android:id="@+id/dato3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Subir foto"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/iconoperfil"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Subir archivo"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/folder"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
    <Button
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:background="@drawable/colorb2"
        app:backgroundTint="@null"
        android:text="Cancelar"
        android:textColor="@color/black"
        android:id="@+id/cancelar"
        android:layout_marginLeft="100dp" />

        <Button
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:background="@drawable/colorb3"
        app:backgroundTint="@null"
        android:text="Guardar"
            android:textColor="@color/black"
            android:id="@+id/guardar"/>
    </LinearLayout>
</LinearLayout>