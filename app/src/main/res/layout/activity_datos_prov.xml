<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DatosProv">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/loginfondo"
        android:layout_height="160dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/iconoperfil"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Nombre del Proovedor"
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/flecha"
        android:id="@+id/atras"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="Aqui iran datos del Proveedor"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="210dp"
        android:background="@color/black"
        />
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/casita"
            android:id="@+id/casita"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/folder"
            android:id="@+id/carpeta"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/basurita2"
            android:id="@+id/basura"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/mensajitos"
            android:id="@+id/soporte"/>
    </LinearLayout>
</LinearLayout>