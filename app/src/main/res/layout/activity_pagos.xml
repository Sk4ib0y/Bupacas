<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".Pagos">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:src="@drawable/papapagos1"
        android:layout_gravity="top|center_horizontal"/>

    <ImageView
        android:id="@+id/atras"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/flecha"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:id="@+id/mas"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mas"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="250dp"/>

    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_marginTop="190dp"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/black"/>

    <ListView
        android:id="@+id/listita"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="200dp"/>

    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_marginTop="560dp"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/black"/>

    <ImageView
        android:id="@+id/casita"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/casita"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="85dp"/>

    <ImageView
        android:id="@+id/soporte"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="600dp"
        android:layout_marginStart="190dp"
        android:src="@drawable/mensajitos"/>

    <FrameLayout
        android:id="@+id/deleteLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¿Estas seguro deseas eliminar al proveedor?"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:background="@drawable/colorb"
                    android:text="Cancelar" />

                <Button
                    android:id="@+id/eliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:background="@drawable/colorb"
                    android:layout_marginStart="24dp"
                    android:text="Eliminar" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</FrameLayout>
