<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondogrande"
    tools:context=".Principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/bupacasmenu" />

        <ImageView
            android:id="@+id/perfil"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/iconoperfil" />
    </LinearLayout>

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="420dp"
        android:layout_marginTop="160dp"
        android:layout_gravity="top|center_horizontal"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Fila 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">


                    <ImageView
                        android:id="@+id/proovedores"
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:src="@drawable/proveedor"
                        android:contentDescription="Proveedores" />



                    <ImageView
                        android:id="@+id/envios"
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:src="@drawable/envios"
                        android:scaleType="centerCrop"
                        android:contentDescription="Envíos" />
            </LinearLayout>

            <!-- Fila 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">



                    <ImageView
                        android:id="@+id/pagos"
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:src="@drawable/pagos"
                        android:scaleType="centerCrop"
                        android:contentDescription="Pagos" />

                    <ImageView
                        android:id="@+id/inventarios"
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:src="@drawable/inventarioss"
                        android:scaleType="centerCrop"
                        android:contentDescription="Inventarios" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/clientes"
                        android:layout_marginStart="90dp"
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:src="@drawable/clientes"
                        android:scaleType="centerCrop"
                        android:contentDescription="Clientes" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- FOOTER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="620dp"
        android:background="#CFD8DC"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/casita"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="32dp"
            android:src="@drawable/casita"
            android:contentDescription="Inicio"/>


    </LinearLayout>


    <FrameLayout
        android:id="@+id/signoutlayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Estas seguro deseas cerrar sesion?"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:background="@drawable/colorb"
                    android:text="Cancelar" />

                <Button
                    android:id="@+id/logoutb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:background="@drawable/colorb"
                    android:layout_marginStart="24dp"
                    android:text="Cerrar Sesion" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</FrameLayout>

