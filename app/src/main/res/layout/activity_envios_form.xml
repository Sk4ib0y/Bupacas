<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".Altas.EnviosAltas">

    <!-- HEADER FIJO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/atras"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flecha"/>

        <ImageView
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/enviospapa1"/>
    </LinearLayout>

    <!-- SCROLL (SOLO FORMULARIO) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="180dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <!-- Código Postal -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Codigo Postal"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/cp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Destino -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destino"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/destino"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Fecha -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Fecha"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:hint="Selecciona fecha"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Cliente -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"/>

            <ListView
                android:id="@+id/cliente"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <!-- Proveedor -->
            <TextView
                android:text="Proveedor"
                android:textSize="25dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"/>

            <ListView
                android:id="@+id/proveedor"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <!-- Botón -->
            <Button
                android:id="@+id/send"
                android:text="Añadir al registro"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:background="@drawable/colorb"
                app:backgroundTint="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <!-- FOOTER FIJO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="-20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/casita"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/casita"/>

            <ImageView
                android:id="@+id/carpeta"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/folder"/>

            <ImageView
                android:id="@+id/basura"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/basurita2"/>

            <ImageView
                android:id="@+id/soporte"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/mensajitos"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
