<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context=".Datos.DatosEnvio">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/atras"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/flecha"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="32dp"
            android:textColor="@color/black"
            android:text="Nombre del envío"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de realización"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/fondoenvio"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="170dp"
        android:src="@drawable/camion2"/>

        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/fondoenvio">

            <TextView
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="Destinatario: Juan Perez"
                android:textColor="@color/black"
                android:id="@+id/destinatario"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="24dp"
                android:text="Producto: Papa"
                android:textColor="@color/black"
                android:id="@+id/producto"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="160dp"
                android:layout_height="24dp"
                android:text="Localizacion: Calle 123"
                android:textColor="@color/black"
                android:id="@+id/localizacion"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="24dp"
                android:text="Pago:$250"
                android:textColor="@color/black"
                android:id="@+id/pagos"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="160dp"
                android:textColor="@color/black"
                android:layout_height="24dp"
                android:text="Proovedor: PapaFarm"
                android:id="@+id/proovedor"
                android:textStyle="bold"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginLeft="120dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos del Producto"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="29.6dp"
            android:textColor="@color/black"
            android:text="Cantidad (Kg): 10kg"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/peso"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="29.6dp"
            android:text="Num. Cajas: 3"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/ncajas"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="29.6dp"
            android:text="Num. Tarimas: 1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:id="@+id/ntarimas"/>


    </LinearLayout>

    <View
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_marginTop="100dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/casita"
            android:id="@+id/casita"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mensajitos"
            android:id="@+id/soporte"/>
    </LinearLayout>
</LinearLayout>