<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondogrande"
    tools:context=".Inventarios">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:src="@drawable/inventariospapa1"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/flecha"
        android:id="@+id/atras"/>
    </LinearLayout>
    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listita"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="12dp"
        tools:listitem="@layout/modelopapa"
        android:overScrollMode="never"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="#CFD8DC"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/casita"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="32dp"
            android:src="@drawable/casita"
            android:contentDescription="Inicio"/>

        <ImageView
            android:id="@+id/soporte"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="32dp"
            android:src="@drawable/mensajitos"
            android:contentDescription="Soporte"/>
    </LinearLayout>
</LinearLayout>