<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Columna izquierda: Imagen de papa + botón de eliminar debajo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/iv_papa"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:contentDescription="Papa seleccionada"
                android:background="@drawable/papa"
                android:adjustViewBounds="true" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/basurita3"
                android:contentDescription="Eliminar papa"
                android:padding="6dp" />
        </LinearLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1B5E20"
                android:ellipsize="end"
                android:maxLines="2" />

            <!-- Proveedor -->
            <TextView
                android:id="@+id/tv_proveedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Proveedor: AgroMex SA"
                android:textColor="#616161"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_tamaño"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Tamaño:"
                    android:textColor="#455A64"
                    android:textSize="20dp"
                    android:ellipsize="end"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/tv_variedad"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Variedad:"
                    android:textColor="#455A64"
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="2"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>